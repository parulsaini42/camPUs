<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aboutus">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"/>


    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back_main"
        android:gravity="center">

        <TextView
            android:layout_width="133dp"
            android:layout_height="46dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:background="#66a367"
            android:elevation="20dp"
            android:text="ABOUT US"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="146dp"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:onClick="parul"
            android:elevation="25dp"
            android:src="@mipmap/pa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



            <ImageView
                android:layout_width="0dp"
                android:layout_height="133dp"
                android:onClick="aman"
                android:layout_weight="0.33"
                android:elevation="25dp"
                android:src="@mipmap/am" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="133dp"
                android:elevation="25dp"
                android:onClick="ananay"
                android:layout_weight="0.33"
                android:src="@mipmap/an" />

    </LinearLayout>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#fefbf7f7"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif"
                android:text="The developers of this application are 3rd year Computer Science and Engineering students currently pursuing their bachelors from UIET,PU,Chandigarh."
                android:textSize="15sp"/>

            <ImageButton
                android:layout_width="360dp"
                android:layout_height="79dp"
                android:layout_marginTop="35dp"
                android:background="#ca1827"
                android:gravity="bottom"
                android:onClick="mail"
                android:src="@drawable/mail" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>